{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": false
  },
  "exclude": [
    "dist/**/*",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tests/**/*"
  ],
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
